import spacy

# Load spaCy English model
nlp = spacy.load("en_core_web_sm")

def count_pos_tags(text):
    # Process the text with spaCy
    doc = nlp(text)
    
    # Initialize counts
    noun_count = 0
    adj_count = 0
    adv_count = 0
    
    # Iterate through tokens and count POS tags
    for token in doc:
        if token.pos_ == "NOUN":
            noun_count += 1
        elif token.pos_ == "ADJ":
            adj_count += 1
        elif token.pos_ == "ADV":
            adv_count += 1
    
    return noun_count, adj_count, adv_count

# Example usage:
review_text = "The quick brown fox jumps over the lazy dog."
noun_count, adj_count, adv_count = count_pos_tags(review_text)
print("Number of nouns:", noun_count)
print("Number of adjectives:", adj_count)
print("Number of adverbs:", adv_count)
